<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_back"
    android:padding="5dp"
    android:id="@+id/dialog_layout"
    >

    <ImageView
        android:id="@+id/sand_watch_back_image_view_id"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:src="@drawable/hour_glass_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/description_upload_text_view_id"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sand_watch_image_view_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="@id/sand_watch_back_image_view_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/sand_watch_back_image_view_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_upload_text_view_id"
        style="@style/AppTheme.TextView.Profile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=" در حال ارسال اطلاعات به سرور"
        android:textColor="@color/bootstrap_gray_light"
        android:padding="10dp"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sand_watch_back_image_view_id"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>