<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorBackground">@color/colorActivityBackground</item>
    </style>

    <style name="AppTheme.TextView" parent="AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.TextView.Profile" parent="AppTheme">
        <item name="android:textColor">@color/login_submit_gradient_right</item>
        <item name="fontFamily">@font/big_main_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.time.temp" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/big_main_font</item>
        <item name="android:background">@drawable/back_time_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">25dp</item>
    </style>

    <style name="AppTheme.report.image" parent="AppTheme">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_constraintHorizontal_chainStyle">packed</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Constraint.time" parent="AppTheme">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/back_layout_time</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">25dp</item>
    </style>


    <style name="AppTheme.animated" parent="AppTheme">
        <item name="android:textColor">@color/login_submit_gradient_right</item>
        <item name="fontFamily">@font/big_main_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.LeaderBoard" parent="AppTheme">
        <item name="android:textColor">@color/login_submit_gradient_right</item>
        <item name="fontFamily">@font/big_main_font</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="AppTheme.LeaderBoardMine" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/big_main_font</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="AppTheme.LeaderBoardTop" parent="AppTheme">
        <item name="android:textColor">@color/colorHintEditText</item>
        <item name="fontFamily">@font/big_main_font</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="AppTheme.Button.pause_start" parent="AppTheme">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHintEditText</item>
        <item name="background">@drawable/code_input_back</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/main_font</item>
    </style>

</resources>
